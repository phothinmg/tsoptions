{
  "name": "@phothin/tsoptions",
  "version": "0.1.1",
  "description": "Get TypeScript compiler options from a config file, and manipulate them programmatically.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "scripts": {
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phothinmg/tsoptions.git"
  },
  "keywords": [
    "typescript",
    "compilerOptions"
  ],
  "author": "Pho Thin Mg <phothinmg@disroot.org>",
  "license": "Apache-2.0",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/phothinmg/tsoptions/issues"
  },
  "homepage": "https://github.com/phothinmg/tsoptions#readme",
  "devDependencies": {
    "@types/node": "^24.3.3",
    "typescript": "^5.9.2"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
